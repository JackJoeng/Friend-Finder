<form id="survey" class="centerT">

  <h3>Create an Account</h3>
  <div class="question form-group">
    <label for="name" class="col-2 col-form-label">Name</label>
    <div class="col-2 center">
      <input name="name" class="form-control centerT" type="text" placeholder="Smith" id="name" required>
    </div>
  </div>
 
  <div class="question form-group">
    <label for="name" class="col-2 col-form-label">Age</label>
    <div class="col-2 center">
      <input name="age" class="form-control centerT" type="text" placeholder="18" id="age" required>
    </div>
  </div>
 

  <div class="question form-group">
    <label for="photo" class="col-2 col-form-label">Profile Picture</label>
    <div class="col-12 center">
      <input name="photo" class="form-control centerT" type="url" placeholder="URL: http://fb.photo.jpg" id="photo" required pattern="https?://.+">
      <br>
      <input name="photo" type="file" id="photo" accept="image/*">
    </div>
  </div>
 
  

  <h3>Answer Few Questions</h3>

  {{#each questions}}

  <div class="question">

    <div><span class="badge badge-pill badge-default">{{this.id}}</span></div>
    <label for="q{{this.id}}">{{this.text}}</label>
    <div class="range-group">
      <div class="row">
        <div class="col-2 col-md-3 text-right">Strongly Disagree</div>
        <div class="col-8 col-md-6 text-center">
          <input type="range" class="sliderQuestion" id="q{{this.id}}" min="1" value="3" max="5" step="1">
        </div>
        <div class="col-2 col-md-3 text-left">Strongly Agree</div>
      </div>
      <!-- row -->
    </div>
  </div>
 

  {{/each}}

  <div id="submitContainer">
    <input type="submit" id="submit" class="btn btn-primary" value="Submit">
  </div>

</form>

<div class="modal fade" id="friendModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="centerT modal-title" id="modalTitle">Congratulation!</h5>
        <button type="button" id="modalClose" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      </div>
    </div>
  </div>
</div>
